    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "6.16.3",
    "@prisma/extension-accelerate": "^2.0.2",
    "@repo/schema": "workspace:^",
    "hono": "^4.9.10"
  },
  "devDependencies": {
    "prisma": "^6.16.3",
    "wrangler": "^4.42.0",
    "typescript": "5.9.2"
  }
}
