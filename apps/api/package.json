{
  "name": "api",
  "type": "module",
  "exports": {
    "./lib/rpc": {
      "import": {
        "types": "./dist/lib/rpc.d.ts",
        "default": "./dist/lib/rpc.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
